@using KI_25.Controllers
@model List<Products>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3 card shadow">
            <div class="card-body">

                <h5>@product.Picture</h5>
                <a style="color:black" href="/product/index/@product.Id">
                    <h5>@product.Name</h5>
                </a>
                <h5>@product.Cost руб.</h5>
                <a class="btn btn-dark" href="/Product/basket?id=@product.Id" role="button">Добавить в корзину</a>
            </div>
        </div>
    }
</div>