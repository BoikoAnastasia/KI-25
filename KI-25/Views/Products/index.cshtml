@model Product

<div class="bike_basket">
    <img class="bike_img_basket" src="@Model.Image" alt="bike">
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    <p>@Model.Cost руб.</p>

    <form method="post" action="/basket/addtocart/@Model.Id">
        <button type="submit" class="add_in_basket">Добавить в корзину</button>
    </form>
</div>