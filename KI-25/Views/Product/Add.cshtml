@model List<KI_25.Models.Product>

<h2>Products</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <form asp-action="AddToBasket" method="post">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit">Add to Basket</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
